@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Xəbərlər</h1>
    <a asp-controller="blogs" asp-action="create" class="btn btn-outline-success">Yeni xəbər</a>
</div>

<div class="row mt-4">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Başlıq</th>
                    <th scope="col">Tarix</th>
                    <th scope="col">Kateqoriya</th>
                    <th scope="col">Şəkil</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.PublishDate.ToString("HH:mm dd.MM.yyyy")</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <img width="100" src="~/uploads/@item.Photo" />
                    </td>
                    <td>
                        <a asp-controller="blogs" asp-action="edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-controller="blogs" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="text-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
